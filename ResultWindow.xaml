<Window x:Class="FreeScreenShot.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FreeScreenShot"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        Icon="pack://application:,,,/Resource/icon.png">
        <Grid HorizontalAlignment="Left"
                        x:Name="resultGird">
                <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"
                                        MaxWidth="130"/>
                        <ColumnDefinition Width="Auto"
                                        MaxWidth="150"/>
                        <ColumnDefinition Width="Auto"
                                        MaxWidth="120"/>
                        <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="sizeText"
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"> Size:0x0</TextBlock>
                <Button x:Name="copyBtn"
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="2"
                                IsEnabled="false">Copy to clipboard</Button>
                <Button x:Name="saveBtn"
                                Grid.Row="0"
                                Grid.Column="2"
                                Margin="2"
                                IsEnabled="false">Save as PNG</Button>
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                VerticalScrollBarVisibility="Auto"
                                MaxWidth="800"
                                MaxHeight="600"
                              Grid.Row="1"
                              Grid.Column="0"
                              Grid.ColumnSpan="4">
                        <Border Background="White"
                                BorderBrush="Black"
                                BorderThickness="1"
                                Padding="4"
                                Margin="2">
                                <StackPanel>
                                        <ProgressBar Height="20"
                                                        Name="progressBar"/>
                                        <Image x:Name="shotImage"
                                                        Stretch="Fill"
                                                        StretchDirection="Both"/>
                                </StackPanel>
                        </Border>
                </ScrollViewer>
        </Grid>
</Window>
